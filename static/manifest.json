{
    "name": "Text Filter",
    "version": "0.1.2",
    "manifest_version": 2,
    "icons": {
        "128": "icon128.png"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Log Viewer"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["content.css"],
            "js": ["content.js"]
        }
    ],
    "commands": {
        "show-only-filtered-lines": {
            "suggested_key": {
                "default": "Ctrl+X",
                "mac": "Command+X"
            },
            "description": "Show Only Filtered Lines"
        }
    },
    "permissions": ["*://*/*", "<all_urls>", "storage"]
}
